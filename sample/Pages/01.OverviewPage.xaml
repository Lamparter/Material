<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SampleApp.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:icon="clr-namespace:IconPacks.IconKind;assembly=IconPacks.Material"
    xmlns:md="clr-namespace:Material;assembly=Material"
    xmlns:mds="clr-namespace:Material.Styles;assembly=Material"
    xmlns:pages="clr-namespace:SampleApp.Pages">

    <ScrollView Orientation="Vertical">
        <VerticalStackLayout Spacing="20">
            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:Button
                    DynamicStyle="{Static mds:ButtonStyles.Elevated}"
                    Text="Elevated" />
                <md:Button
                    DynamicStyle="{Static mds:ButtonStyles.Filled}"
                    Text="Filled" />
                <md:Button
                    DynamicStyle="{Static mds:ButtonStyles.FilledTonal}"
                    Text="FilledTonal" />
                <md:Button
                    DynamicStyle="{Static mds:ButtonStyles.Outlined}"
                    Text="Outlined" />
                <md:Button
                    DynamicStyle="{Static mds:ButtonStyles.Text}"
                    Text="Text" />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:CheckBox />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:Chip
                    DynamicStyle="{Static mds:ChipStyles.Assist}"
                    Text="chip" />
                <md:Chip
                    DynamicStyle="{Static mds:ChipStyles.Filter}"
                    Text="chip" />
                <md:Chip
                    DynamicStyle="{Static mds:ChipStyles.Input}"
                    Text="chip" />
                <md:Chip
                    DynamicStyle="{Static mds:ChipStyles.Suggestion}"
                    Text="chip" />
            </md:WrapLayout>


            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:ComboBox DynamicStyle="{Static mds:ComboBoxStyles.Field}">
                    <md:MenuItem Text="item 1" />
                    <md:MenuItem Text="item 2" />
                </md:ComboBox>
                <md:ComboBox DynamicStyle="{Static mds:ComboBoxStyles.Outlined}">
                    <md:MenuItem Text="item 1" />
                    <md:MenuItem Text="item 2" />
                </md:ComboBox>
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:FAB IconData="{Static icon:Material.Settings}">
                    <md:FAB.ContextMenu>
                        <md:ContextMenu>
                            <md:MenuItem Text="item 1" />
                            <md:MenuItem Text="item 2" />
                            <md:MenuItem Text="item 3" />
                        </md:ContextMenu>
                    </md:FAB.ContextMenu>
                </md:FAB>
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:ExtendedFAB
                    DynamicStyle="{Static mds:ExtendedFABStyles.Secondary}"
                    IconData="{Static icon:Material.Add}"
                    Text="Extended" />
                <md:ExtendedFAB
                    DynamicStyle="{Static mds:ExtendedFABStyles.Surface}"
                    IconData="{Static icon:Material.Add}"
                    Text="Extended" />
                <md:ExtendedFAB
                    DynamicStyle="{Static mds:ExtendedFABStyles.Tertiary}"
                    IconData="{Static icon:Material.Add}"
                    Text="Extended" />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:FAB
                    DynamicStyle="{Static mds:FABStyles.Secondary}"
                    IconData="{Static icon:Material.Add}" />
                <md:FAB
                    DynamicStyle="{Static mds:FABStyles.Surface}"
                    IconData="{Static icon:Material.Add}" />
                <md:FAB
                    DynamicStyle="{Static mds:FABStyles.Tertiary}"
                    IconData="{Static icon:Material.Add}" />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:IconButton
                    DynamicStyle="{Static mds:IconButtonStyles.Filled}"
                    IconData="{Static icon:Material.Star}"
                    IsToggleEnabled="True" />
                <md:IconButton
                    DynamicStyle="{Static mds:IconButtonStyles.FilledTonal}"
                    IconData="{Static icon:Material.Star}"
                    IsToggleEnabled="True" />
                <md:IconButton
                    DynamicStyle="{Static mds:IconButtonStyles.Outlined}"
                    IconData="{Static icon:Material.Star}"
                    IsToggleEnabled="True" />
                <md:IconButton
                    DynamicStyle="{Static mds:IconButtonStyles.Standard}"
                    IconData="{Static icon:Material.Star}"
                    IsToggleEnabled="True" />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:ProgressIndicator DynamicStyle="{Static mds:ProgressIndicatorStyles.Circular}" />
                <md:ProgressIndicator DynamicStyle="{Static mds:ProgressIndicatorStyles.Linear}" />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:RadioButton Orientation="Horizontal">
                    <md:RadioItem Text="item 1" />
                    <md:RadioItem Text="item 2" />
                    <md:RadioItem Text="item 3" />
                </md:RadioButton>
                <md:RadioButton Orientation="Vertical">
                    <md:RadioItem Text="item 1" />
                    <md:RadioItem Text="item 2" />
                    <md:RadioItem Text="item 3" />
                </md:RadioButton>
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:Switch />
                <md:Switch IsSelected="True" />
                <md:Switch
                    DynamicStyle="{Static mds:SwitchStyles.Mark}"
                    IsSelected="True" />
            </md:WrapLayout>

            <md:WrapLayout
                Padding="20"
                HorizontalSpacing="20">
                <md:TextField
                    IconData="{Static icon:Material.Search}"
                    WidthRequest="250" />

                <md:TextField
                    IconData="{Static icon:Material.Password}"
                    IsError="True"
                    SupportingText="Incorrect password"
                    TextChanged="TextField_TextChanged"
                    TrailingIconClicked="TextField_TrailingIconClicked"
                    TrailingIconData="{Static icon:Material.Close}"
                    WidthRequest="300" />
            </md:WrapLayout>

            <md:Tabs
                DynamicStyle="{Static mds:TabsStyles.Primary}"
                HeightRequest="350">
                <md:TabItem
                    IconData="{Static icon:Material.Pages}"
                    IsActived="True"
                    Text="Test 1">
                    <Grid>
                        <Label
                            HorizontalOptions="Center"
                            Text="Test 1"
                            VerticalOptions="Center" />
                    </Grid>
                </md:TabItem>
                <md:TabItem
                    IconData="{Static icon:Material.Pages}"
                    IsActived="True"
                    Text="Test 2">
                    <Grid>
                        <Label
                            HorizontalOptions="Center"
                            Text="Test 2"
                            VerticalOptions="Center" />
                    </Grid>
                </md:TabItem>
                <md:TabItem
                    IconData="{Static icon:Material.Pages}"
                    IsActived="True"
                    Text="Test 3">
                    <Grid>
                        <Label
                            HorizontalOptions="Center"
                            Text="Test 3"
                            VerticalOptions="Center" />
                    </Grid>
                </md:TabItem>
            </md:Tabs>

            <md:Tabs
                DynamicStyle="{Static mds:TabsStyles.Secondary}"
                HeightRequest="350">
                <md:TabItem
                    ContentType="{Type pages:SettingsPage}"
                    IconData="{Static icon:Material.Pages}"
                    IsActived="True"
                    Text="Test 1" />
                <md:TabItem
                    ContentType="{Type pages:SettingsPage}"
                    IconData="{Static icon:Material.Pages}"
                    IsActived="True"
                    Text="Test 2" />
                <md:TabItem
                    ContentType="{Type pages:SettingsPage}"
                    IconData="{Static icon:Material.Pages}"
                    IsActived="True"
                    Text="Test 3" />
            </md:Tabs>

        </VerticalStackLayout>
    </ScrollView>


</ContentView>
