<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Material.Styles.NavigationBarStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Material">


    <Style TargetType="views:NavigationBar">
        <Setter Property="ControlTemplate">
            <ControlTemplate>
                <Grid
                    x:Name="PART_Root"
                    RowDefinitions="*,auto">
                    <views:ContentPresenter
                        x:Name="PART_Content"
                        Grid.Row="0"
                        Content="{TemplateBinding SelectedItem.Content}" />
                    <views:AutoFillLayout
                        x:Name="Part_Stack"
                        Grid.Row="1"
                        BackgroundColor="Transparent"
                        BindableLayout.ItemsSource="{TemplateBinding Items}"
                        HeightRequest="80">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <views:ContentPresenter Content="{Binding}" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </views:AutoFillLayout>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

</ResourceDictionary>